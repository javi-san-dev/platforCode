---
import Image from 'astro/components/Image.astro';
import downloadIcon from '../assets/download.svg';
import glow from '../assets/glow.webp';
---

<div
   aria-hidden="true"
   class="center pointer-events-none m-auto my-10 h-px w-[600px] max-w-full"
   style="background: linear-gradient(90deg, rgba(0, 0, 0, 0) 0%, rgba(255, 255, 255, 0) 0%, rgba(143, 143, 143, 0.67) 50%, rgba(0, 0, 0, 0) 100%);"
>
</div>

<section class="relative m-auto flex items-center justify-center overflow-hidden px-3 py-50 text-white">
   <div class="flex max-w-[900px] flex-col items-center px-10 text-center max-[1050px]:w-full">
      <div class="mb-10 flex-2">
         <h1 class="text-3xl font-light text-balance max-[1050px]:text-3xl">
            Ready to start? <span class="text-neutral-400"
               >Invest in quality preparation and start master the art of <span class="title">algorithms</span> today!</span
            >
         </h1>
      </div>

        <div
      class="m-auto mt-6 mb-20 flex flex-col gap-3 max-w-[300px] items-center justify-center  max-[600px]:mt-0 max-[600px]:w-[100%] max-[600px]:gap-3"
   >
      <!-- <div class="backgroundStyle w-full rounded-full">
            <button class="font-base w-full cursor-pointer rounded-full bg-black px-8 py-3 text-nowrap text-white hover:bg-neutral-900">Try Web Demo</button>
        </div> -->
      <button class="z-10 text-black flex w-full cursor-pointer justify-center rounded-md bg-white px-4 py-2 text-center font-sm text-base hover:scale-105 transition-transform duration-200">
         <Image
            class="mr-2 rounded-xl text-black"
            src={downloadIcon}
            alt="landing image"
            width="22"
            height="22"
         />Download for Macos</button
      >
      <a href="/download" class="text-white p-0 m-0 underline text-xs cursor-pointer">other platforms</a>
   </div>
   </div>
</section>
